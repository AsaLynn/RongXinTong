<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/sign_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        tools:src="@mipmap/ic_logo" />

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@id/sign_iv"
        android:layout_toEndOf="@id/sign_iv"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="农行信用卡" />

    <ImageView
        android:id="@+id/go_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:src="@mipmap/ic_go" />

    <com.xuanyi.rxt.view.DotView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        app:dotNum="50"
        app:lineColor="@color/color_D4D4D4"
        app:lineOriental="horizontal"
        app:lineWidth="1" />

</RelativeLayout>