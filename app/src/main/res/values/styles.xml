<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginBottom">@dimen/dp_px4</item>
        <item name="android:layout_marginTop">@dimen/dp_px4</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:padding">@dimen/dp_px4</item>
        <item name="android:drawablePadding">@dimen/dp_px8</item>
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:textSize">@dimen/dp_px20</item>
    </style>

    <!--以下为布局中使用的样式.-->
    <style name="content_ll_sty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
